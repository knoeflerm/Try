<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "flash #{key}") %>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
      Debug Params: <%= debug(params) if Rails.env.development? %>
      Server Software: <%= request.server_software if Rails.env.development? %></br>
      Host: <%= request.host if Rails.env.development? %></br>
      Domain: <%= request.domain if Rails.env.development? %></br>
      Method: <%= request.method if Rails.env.development? %>
    </div>
  </body>
</html>